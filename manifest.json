{
    "name": "Custom Web",
    "description": "Cutomize web pages with custom scripts and styles",
	"icons": {
		"256": "icon.png"
	},
    "version": "0.1",
    "manifest_version": 2,
    "permissions" : ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
			"all_frames": true,
            "run_at": "document_start",
            "js": [
				"js/storage.js",
				"js/file.js",
				"content.js"
			]
        }
    ],
    "browser_action": {
        "title": "Edit Files",
		"default_icon": "icon.png"
    }
}
